# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=1.0.0
API_PREFIX=/api

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# Body Parser Configuration
BODY_PARSER_JSON_LIMIT=10mb
BODY_PARSER_URLENCODED_LIMIT=10mb

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
TRUST_PROXY=false

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=water_station
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000

# Redis Configuration
REDIS_URL=redis://localhost:6379
# Alternative: use REDIS_HOST and REDIS_PORT instead of REDIS_URL
# REDIS_HOST=localhost
# REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_RETRIES=10
REDIS_RECONNECT_BASE_DELAY=100
REDIS_RECONNECT_MAX_DELAY=3000

# Paystack Configuration
PAYSTACK_BASE_URL=https://api.paystack.co
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key
PAYSTACK_SECRET_KEY=sk_test_your_secret_key
PAYSTACK_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYSTACK_CALLBACK_URL=http://localhost:3000/api/payments/paystack/callback
PAYSTACK_ENVIRONMENT=test

# Daraja API (M-Pesa) Configuration
DARAJA_CONSUMER_KEY=your_consumer_key_here
DARAJA_CONSUMER_SECRET=your_consumer_secret_here
DARAJA_PASSKEY=your_passkey_here
DARAJA_SHORTCODE=174379
DARAJA_CALLBACK_URL=https://yourdomain.com/api/payments/mpesa/callback
DARAJA_ENVIRONMENT=sandbox
DARAJA_TOKEN_CACHE_DURATION=3300000
DARAJA_REQUEST_TIMEOUT=30000

# Africa's Talking SMS Configuration
AT_API_KEY=your_africastalking_api_key
AT_USERNAME=sandbox
AT_SENDER_ID=WATERKIOSK
AT_ENVIRONMENT=sandbox
AT_ENQUEUE=false
AT_MAX_RETRIES=3
AT_RETRY_DELAY=2000

# Water Pricing Configuration
PRICE_PER_LITER=5
CURRENCY=KES
MIN_AMOUNT=5
MAX_AMOUNT=70000
ROUNDING_STRATEGY=nearest

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRATION_MINUTES=10
OTP_MAX_ATTEMPTS=3
OTP_HASH_ALGORITHM=sha256
OTP_CACHE_ENABLED=true
OTP_CACHE_TTL_SECONDS=600

# Station Configuration
STATION_PULSES_PER_LITER=1000
STATION_ENFORCE_LOCK=true
STATION_REQUIRE_AUTH=false
